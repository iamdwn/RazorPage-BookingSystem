<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU Hotel System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .btn-primary {
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,121,174,1) 35%, rgba(0,212,255,1) 100%);
        }

        .input-group-text .gradient-icon {
            mask: none;
            background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,121,174,1) 35%, rgba(0,212,255,1) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 1.5rem;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff;
        }

        .navbar-light .navbar-nav .nav-link {
            color: #555;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        .navbar .nav-link .fa {
            margin-right: 0.5rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 300;
        }

        .hero-section {
            background: url('your-background-image.jpg') no-repeat center center;
            background-size: cover;
            color: white;
            text-align: center;
            padding: 100px 0;
        }

            .hero-section h1 {
                font-size: 3rem;
                margin-bottom: 1rem;
            }

            .hero-section p {
                font-size: 1.5rem;
                margin-bottom: 2rem;
            }

        .features-section {
            padding: 60px 0;
        }

        .feature-box {
            text-align: center;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .feature-box i {
                font-size: 3rem;
                color: #007bff;
                margin-bottom: 1rem;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 2rem 0;
            text-align: center;
            width: 100%;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

            .footer .social-icons {
                display: flex;
                justify-content: center;
                gap: 10px;
                margin-top: 1rem;
            }

                .footer .social-icons a {
                    color: #555;
                    font-size: 1.5rem;
                }

                    .footer .social-icons a:hover {
                        color: #007bff;
                    }

            .footer .copyright {
                margin-top: 1rem;
                font-size: 0.9rem;
                color: #555;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 2rem 0;
            text-align: center;
            width: 100%;
        }

            .footer h5 {
                font-weight: bold;
                margin-bottom: 1rem;
            }

            .footer address, .footer ul, .footer .social-icons {
                margin-bottom: 1rem;
            }

            .footer ul {
                padding-left: 0;
                list-style: none;
            }

                .footer ul li {
                    margin-bottom: 0.5rem;
                }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

            .footer .social-icons a {
                color: #555;
                font-size: 1.5rem;
            }

                .footer .social-icons a:hover {
                    color: #007bff;
                }

            .footer .text-primary {
                color: #007bff !important;
            }

            .footer .me-2 {
                margin-right: 0.5rem !important;
            }

            .footer .me-3 {
                margin-right: 1rem !important;
            }

            .footer .d-flex {
                display: flex !important;
            }

            .footer .justify-content-start {
                justify-content: flex-start !important;
            }

            .footer .align-items-center {
                align-items: center !important;
            }

            .footer .mb-3 {
                margin-bottom: 1rem !important;
            }

            .footer .mb-2 {
                margin-bottom: 0.5rem !important;
            }

    </style>
</head>
<body>
    <main role="main" class="pb-3">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">
                        <i class="fas fa-hotel"></i> FU Hotel System
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-page="/Index">
                                    <i class="fas fa-home"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Rooms/Index">
                                    <i class="fas fa-bed"></i> Rooms
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            @{
                                var user = Context.Session.GetObjectFromJson<UserDto>("User");
                            }
                            @if (user != null && user.isAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user"></i> Hello, @user.userName
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" asp-page="/Profile/Index"><i class="fas fa-user-circle"></i> Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Cart/Index"><i class="fas fa-shopping-cart"></i> Cart</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Booking/History"><i class="fas fa-history"></i> Booking History</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Account/Login"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Account/Register"><i class="fas fa-user-plus"></i> Register</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="hero-section">
            <div class="container">
                <h1>Welcome to MiniHotelBooking</h1>
                <p>Find and book your perfect stay with us</p>
                <a href="#" class="btn btn-primary btn-lg">Get Started</a>
            </div>
        </div>
        <div class="container mt-4">
            <main role="main" class="pb-3">
                <partial name="_Toast" />
                @RenderBody()
            </main>
        </div>
        <div class="features-section bg-light">
            <div class="container mt-5">
                <h1 class="text-center text-primary mb-4 text-black-50">Our Features</h1>
                <div class="row">
                    <div class="col-md-4">
                        <div class="feature-box text-center p-4">
                            <i class="fas fa-bed gradient-icon mb-3"></i>
                            <h3>Comfortable Rooms</h3>
                            <p>Enjoy your stay in our cozy and comfortable rooms.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box text-center p-4">
                            <i class="fas fa-concierge-bell gradient-icon mb-3"></i>
                            <h3>24/7 Service</h3>
                            <p>We provide round-the-clock service to make your stay pleasant.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-box text-center p-4">
                            <i class="fas fa-map-marked-alt gradient-icon mb-3"></i>
                            <h3>Great Locations</h3>
                            <p>Our hotels are located in prime areas to give you easy access to local attractions.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer mt-4 border-top">
            <div class="container">
                <div class="row py-4">
                    <div class="col-md-4 mb-3 mr-2">
                        <h5>Contact Us</h5>
                        <address>
                            123 FPT Street<br>
                            Ho Chi Minh, State 700000<br>
                            Vietnam<br>
                            <i class="fas fa-phone"></i> +1234567890<br>
                            <i class="fas fa-envelope"></i> <a href="mailto:FuMiniHotelManagement@gmail.com">FuMiniHotelManagement@gmail.com</a>
                        </address>
                    </div>
                    <div class="col-md-4 mb-3 mr-2">
                        <h5>Quick Links</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="/Index" class="text-decoration-none">
                                    <i class="fas fa-home me-2 text-primary"></i> Home
                                </a>
                            </li>
                            <li class="mb-2 ms-lg-1">
                                <a href="/Rooms/Index" class="text-decoration-none">
                                    <i class="fas fa-bed me-2 text-primary"></i> Rooms
                                </a>
                            </li>
                            <li class="mb-2 ms-lg-3">
                                <a href="/Facilities" class="text-decoration-none">
                                    <i class="fas fa-concierge-bell me-2 text-primary"></i> Facilities
                                </a>
                            </li>
                            <li class="mb-2 ms-lg-4">
                                <a href="/Contact" class="text-decoration-none">
                                    <i class="fas fa-envelope me-2 text-primary"></i> Contact Us
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-4 mb-3 mr-2">
                        <h5>Connect with Us</h5>
                        <div class="justify-content-start">
                            <a href="https://www.facebook.com" target="_blank" class="text-primary me-3"><i class="fab fa-facebook-f fa-lg"></i></a>
                            <a href="https://www.twitter.com" target="_blank" class="text-info me-3"><i class="fab fa-twitter fa-lg"></i></a>
                            <a href="https://www.instagram.com" target="_blank" class="text-danger me-3"><i class="fab fa-instagram fa-lg"></i></a>
                            <a href="https://www.linkedin.com" target="_blank" class="text-primary me-3"><i class="fab fa-linkedin-in fa-lg"></i></a>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col text-center">
                        <hr>
                        <p class="text-muted small mb-0">&copy; 2024 FU Hotel System. All rights reserved.</p>
                        <p class="small mb-0">Designed by Your Company</p>
                    </div>
                </div>
            </div>
        </footer>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </main>
</body>
</html>
