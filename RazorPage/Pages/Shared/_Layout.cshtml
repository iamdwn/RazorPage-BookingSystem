<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FU Hotel System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        body {
            font-family: 'Arial', sans-serif;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff;
        }

        .navbar-light .navbar-nav .nav-link {
            color: #555;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        .hero-section {
            background: url('your-background-image.jpg') no-repeat center center;
            background-size: cover;
            color: white;
            text-align: center;
            padding: 100px 0;
        }

            .hero-section h1 {
                font-size: 3rem;
                margin-bottom: 1rem;
            }

            .hero-section p {
                font-size: 1.5rem;
                margin-bottom: 2rem;
            }

        .features-section {
            padding: 60px 0;
        }

        .feature-box {
            text-align: center;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .feature-box i {
                font-size: 3rem;
                color: #007bff;
                margin-bottom: 1rem;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
            text-align: center;
            width: 100%;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

            .footer .social-icons {
                display: flex;
                justify-content: center;
                gap: 10px;
                margin-top: 1rem;
            }

                .footer .social-icons a {
                    color: #555;
                }

                    .footer .social-icons a:hover {
                        color: #007bff;
                    }
    </style>
</head>
<body>
    <main role="main" class="pb-3">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">FU Hotel System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Rooms/Index">Rooms</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var user = Context.Session.GetObjectFromJson<UserDto>("User");
                        }
                        @if (user != null && user.isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Hello, @user.userName
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Profile/Index">Profile</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Cart/Index">Cart</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Booking/History">Booking History</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Account/Login">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="hero-section">
        <div class="container">
            <h1>Welcome to MiniHotelBooking</h1>
            <p>Find and book your perfect stay with us</p>
            <a href="#" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </div>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            <partial name="_Toast" />
            @RenderBody()
        </main>
    </div>
    <div class="features-section bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="fas fa-bed"></i>
                        <h3>Comfortable Rooms</h3>
                        <p>Enjoy your stay in our cozy and comfortable rooms.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="fas fa-concierge-bell"></i>
                        <h3>24/7 Service</h3>
                        <p>We provide round-the-clock service to make your stay pleasant.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="fas fa-map-marked-alt"></i>
                        <h3>Great Locations</h3>
                        <p>Our hotels are located in prime areas to give you easy access to local attractions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer mt-4 border-top">
        <div class="container">
            &copy; 2024 - MiniHotelBooking - <a href="#">Privacy</a>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
