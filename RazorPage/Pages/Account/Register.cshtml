@page
@model RazorPage.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<partial name="_Toast" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Register</h2>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.CustomerFullName" class="form-label"></label>
                            <input asp-for="Input.CustomerFullName" class="form-control" />
                            <span asp-validation-for="Input.CustomerFullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Telephone" class="form-label"></label>
                            <input asp-for="Input.Telephone" class="form-control" />
                            <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.CustomerBirthday" class="form-label"></label>
                            <input asp-for="Input.CustomerBirthday" class="form-control" type="date" />
                            <span asp-validation-for="Input.CustomerBirthday" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>
                    <div class="mt-3 text-center">
                        <p>
                            <a asp-page="/Account/Login">Already have an account?</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
