@page
@model RazorPage.Pages.Admin.Bookings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mt-4">Delete Booking Reservation</h1>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
            <hr />
            <h4>Booking Reservation Details</h4>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.BookingDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.BookingDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.TotalPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.BookingStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.BookingStatus)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.Customer.EmailAddress)
                </dd>
            </dl>

            <form method="post" class="text-center mt-4">
                <input type="hidden" asp-for="BookingReservation.BookingReservationId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1260px;
    }

    .card {
        border-radius: 10px;
    }

    .btn {
        transition: background-color 0.3s, border-color 0.3s, transform 0.3s;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .btn-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }
</style>
