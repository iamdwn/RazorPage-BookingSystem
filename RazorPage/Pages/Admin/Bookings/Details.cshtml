@page
@model RazorPage.Pages.Admin.Bookings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mt-4">Booking Reservation Details</h1>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Booking Reservation</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.BookingDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.BookingDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.TotalPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.BookingStatus)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.BookingStatus)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BookingReservation.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BookingReservation.Customer.EmailAddress)
                </dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-page="./Edit" asp-route-id="@Model.BookingReservation.BookingReservationId" class="btn btn-outline-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

<style>
    .container {
        max-width: 1260px;
    }

    .card {
        border-radius: 10px;
    }

    .btn-outline-primary {
        transition: background 0.3s, border-color 0.3s, color 0.3s, transform 0.3s;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            transform: scale(1.05);
        }

    .btn-outline-secondary {
        transition: background 0.3s, border-color 0.3s, color 0.3s, transform 0.3s;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
            transform: scale(1.05);
        }
</style>
