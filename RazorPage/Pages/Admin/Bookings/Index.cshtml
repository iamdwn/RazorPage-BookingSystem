@page
@model RazorPage.Pages.Admin.Bookings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mt-4">Bookings Management</h1>

<div class="container mt-5">
    <p>
        <a asp-page="Create" class="btn btn-primary mb-3">Create New</a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingReservation[0].BookingDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingReservation[0].TotalPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingReservation[0].BookingStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingReservation[0].Customer)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BookingReservation)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.EmailAddress)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.BookingReservationId" class="btn btn-outline-primary btn-sm me-2">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.BookingReservationId" class="btn btn-outline-info btn-sm me-2">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.BookingReservationId" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .container {
        max-width: 1800px;
    }

    .btn {
        transition: background-color 0.3s, border-color 0.3s, transform 0.3s;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .btn-outline-primary:hover {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

    .btn-outline-info:hover {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: #fff;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }

    .table-responsive {
        margin-top: 20px;
    }
</style>
